      <% elsif token.asset == "bitcoin" %>
        <%= line_chart [
          {name: token.symbol, data: token.prices.pluck(:price_date, :volatility)},
          {name: "WETH", data: @ethereum.first.prices.pluck(:price_date, :volatility)},
