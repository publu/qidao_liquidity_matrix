<div  itemscope itemtype="https://schema.org/Table" id="tokens" class="table-responsive">
  <table class="table table-striped align-middle">
    <tr class="table-header">
      <th itemprop="about" class="red">
        <%= sort_link(column: "symbol", label: "Token") %>
        <%= sort_indicator if params[:column] == "symbol" %>
      </th>
      <th class="red">
        Chain
      </th>
      <th class="red text-end">
        <%= sort_link(column: "liquidity", label: "Total Onchain Liquidity") %>
        <%= sort_indicator if params[:column] == "liquidity" %>
      </th>
      <th class="red text-end td-15">
        <%= sort_link(column: "trade_slippage", label: "Largest trade for stable with < 10% slippage") %>
        <%= sort_indicator if params[:column] == "trade_slippage" %>
      </th>
      <th class="red text-end">
        <%= sort_link(column: "volume", label: "1M Average Daily Volume") %>
        <%= sort_indicator if params[:column] == "volume" %>
      </th>
      <th class="red text-end td-15">
        <%= sort_link(column: "centralized", label: "Does one wallet own more than 20% of tokens in onchain LPs?") %>
        <%= sort_indicator if params[:column] == "centralized" %>
      </th>
      <th class="red text-center">Availability</th>
      <th class="red text-center"><%= link_to "Risk Grading", tokens_path %></th>
      <% if user_signed_in? && current_user.admin? %>
        <th class="red text-center">Actions</th>
      <% end %>
    </tr>
    <% @tokens.each do |token| %>
    <tr>
      <td itemprop="name">
        <%= link_to token, title: "View rubric for " + token.symbol + " on " + token.network.name, class: "plain_link" do %>
          <strong><%= token.symbol %></strong>
        <% end %>
      </td>
      <td itemprop="genre" style="color: <%= token.network.color %>">
        <%= link_to token.network.name, token.network, title: "View chain information for " + token.network.name, class: "plain_link" %>
      </td>
      <td class="text-end">
        <%= number_to_currency(token.liquidity) %>
      </td>
      <td class="text-end">
        <%= number_to_currency(token.trade_slippage) %>
      </td>
      <td class="text-end">
        <%= number_to_currency(token.volume) %>
      </td>
      <td class="text-center">
        <% if token.centralized? %>
          <span class="text-danger">Yes</span>
        <% else %>
          No
        <% end %>
      </td>
      <td itemprop="provider" class="text-center">
        <%= link_to token.minter.name, token.minter.link, title: "Go to " + token.minter.name, class: "plain_link" %>
      </td>
      <td itemprop="aggregateRating" class="text-center">
        <%= link_to token, title: "View rubric for " + token.symbol + " on " + token.network.name do %>
          <strong><%= token.grade %></strong>
        <% end %>
      </td>
      <% if user_signed_in? && current_user.admin? %>
        <td>
          <ul class="list-unstyled list-group list-group-horizontal">
            <li>
              <%= link_to edit_token_path(token), title: "Edit this token" do %>
                <ion-icon name="create-outline"></ion-icon>
              <% end %>
            </li>
            <li>
              <%= link_to token, method: :delete, title: "Delete this token" do %>
                <ion-icon name="trash-outline"></ion-icon>
              <% end %>
            </li>
          </ul>
        </td>
      <% end %>
    </tr>
  <% end %>
  </table>
  <% if @token_count > 15 %>
    <div class="position-absolute start-50 translate-middle-x"><%== pagy_bootstrap_nav(@pagy) %></div>
  <% end %>
</div>
