<div  itemscope itemtype="https://schema.org/Table" id="<%= dom_id network %>" class="table-responsive">
  <table class="table table-striped">
    <tr class="table-header">
      <th itemprop="about" class="red">
        <%= sort_network_link(column: "symbol", label: t('list_token')) %>
        <%= sort_indicator if params[:column] == "symbol" %>
      </th>
      <th class="red">Chain</th>
      <th class="red text-end">
        <%= sort_network_link(column: "liquidity", label: t('list_liquidity')) %>
        <%= sort_indicator if params[:column] == "liquidity" %>
      </th>
      <th class="red text-end td-15">
        <%= sort_network_link(column: "trade_slippage", label: t('list_slippage')) %>
        <%= sort_indicator if params[:column] == "trade_slippage" %>
      </th>
      <th class="red text-end">
        <%= sort_network_link(column: "volume", label: t('list_volume')) %>
        <%= sort_indicator if params[:column] == "volume" %>
      </th>
      <th class="red text-end"><%= t('list_debt') %></th>
      <th class="red text-end td-10">
        <%= sort_network_link(column: "centralized", label: t('list_centralization')) %>
        <%= sort_indicator if params[:column] == "centralized" %>
      </th>
      <th class="red text-center"><%= t('list_available') %></th>
      <th class="red text-center"><%= link_to t('list_grade'), network_path, title: "Risk Grading" %></th>
      <% if user_signed_in? && current_user.admin? %>
        <th class="red text-center"><%= t('list_actions') %></th>
      <% end %>
    </tr>
    <% @tokens.each do |token| %>
    <tr>
      <td itemprop="name">
        <strong>
          <%= link_to token.symbol, token, title: "View rubric for " + token.symbol + " on " + token.network.name, class: "plain_link" %>
        </strong>
        <% if token.created_at > (Date.today - 5.days) %>
          <span class="new"><%= t('list_new') %></span>
        <% end %>
      </td>
      <td itemprop="genre" style="color: <%= token.network.color %>">
        <%= token.network.name %>
      </td>
      <td class="text-end">
        <%= number_to_currency(token.liquidity) %>
      </td>
      <td class="text-end">
        <%= number_to_currency(token.trade_slippage) %>
      </td>
      <td class="text-end">
        <%= number_to_currency(token.volume) %>
      </td>
      <td class="text-end">
        <% if token.mai_debt? %>
          <%= mai(token.mai_debt) %>
        <% else %>
          $0
        <% end %>
      </td>
      <td class="text-center">
        <% if token.centralized? %>
          <span class="text-danger"><%= t('list_yes') %></span>
        <% else %>
          <%= t('list_no') %>
        <% end %>
      </td>
      <td class="text-center">
        <% if token.minter.name == "Not Released" %>
          <span class="text-danger"><%= t('list_released') %></span>
        <% else %>
          <%= link_to token.minter.name, token.minter.link, title: "Go to " + token.minter.name, class: "plain_link" %>
        <% end %>
      </td>
      <td itemprop="aggregateRating" class="text-center">
        <%= link_to token, title: "View rubric for " + token.symbol + " on " + token.network.name do %><strong><%= token.grade %><% end %>
      </td>
      <% if user_signed_in? && current_user.admin? %>
        <td>
          <ul class="list-unstyled list-group list-group-horizontal">
            <li>
              <%= link_to edit_token_path(token), title: "Edit this token" do %>
                <ion-icon name="create-outline"></ion-icon>
              <% end %>
            </li>
            <li>
              <%= link_to token, method: :delete, title: "Delete this token" do %>
                <ion-icon name="trash-outline"></ion-icon>
              <% end %>
            </li>
          </ul>
        </td>
      <% end %>
    </tr>
    <% end %>
    <% if network.tokens.count > 0 %>
      <tr>
        <td><strong><%= t('list_totals') %></strong></td>
          <td><strong><%= network.tokens.count %></strong></td>
          <td class="text-end"><strong><%= number_to_currency(network.tokens.sum(:liquidity)) %></strong></td>
          <td class="text-end"><strong><%= number_to_currency(network.tokens.sum(:trade_slippage) / network.tokens.count) %></strong></td>
          <td class="text-end"><strong><%= number_to_currency(network.tokens.sum(:volume)) %></strong></td>
          <td class="text-center"><strong><%= network.tokens.where(centralized: true).count %></strong></td>
          <td class="text-end"><strong><%= mai(network.tokens.sum(:mai_debt)) %></strong></td>
          <td class="text-center">-</td>
          <td class="text-center">
            <% sum = 0 %>
            <% @tokens.each do |t| %>
                <% product = (grade_to_number(t.grade)).to_i %>
                <% sum += product %>
                <% product %>
            <% end %>
            <strong><%= num_to_grade(sum / network.tokens.count) %></strong>
        </td>
        <% if user_signed_in? && current_user.admin? %>
          <td class="text-center">-</td>
        <% end %>
      </tr>
    <% else %>
      <tr>
        <td colspan="8">Nothing to see here yet! Tokens will be added soon.</td>
      </tr>
    <% end %>
  </table>
  <% if @token_count > 15 %>
    <div class="footer"><%== pagy_bootstrap_nav(@pagy) %></div>
  <% end %>
</div>
